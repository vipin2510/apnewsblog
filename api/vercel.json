{
    "version": 2,
    "builds": [
      {
        "src": "api/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "client",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/dist"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/index.js" },
      { "src": "/(.*)", "dest": "/client/dist/index.html" }
    ]
  }
  
